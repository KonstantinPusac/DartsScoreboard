@namespace DartsScoreboard
@page "/gameStandardPlay/{GameCode}"

<div class="standard-root">
    <div class="standard-toolbar">
        <button class="toolbar-button" @onclick="GoBack" aria-label="Go back">
            <span class="toolbar-icon">⟵</span>
            <span>Back</span>
        </button>
        <button class="toolbar-button secondary" @onclick="UndoFromToolbar" aria-label="Undo last action" disabled="@(!CanUndo)">
            <span class="toolbar-icon">⟲</span>
            <span>Undo</span>
        </button>
    </div>

@if (WinnerPopup)
{
    <div class="winner-popup">
        <h2>Game Over 🏋️</h2>

        <h3 class="mb-3">Final Player Statistics</h3>

        @foreach (var player in Players)
        {
            <div class="card p-3 mb-3">
                <h4>@player.Name @(player.Id == Players[CurrentPlayerIndex].Id ? "(Winner 🏆)" : "")</h4>
                <p>Three-Dart Average: @player.Stats.ThreeDartAverage.ToString("F2")</p>
                <p>Best three-dart average leg: @player.Stats.BestThreeDartLegAverage.ToString("F2")</p>
                <p>Checkout Percentage: @player.Stats.CheckoutPercentage.ToString("F2")%</p>
                <p>Best leg: @player.Stats.BestNumOfDartsThrown.ToString()</p>
                <p>Worst leg: @player.Stats.WorstNumOfDartsThrown.ToString()</p>
                <p>Highest Score: @player.Stats.HighestScore</p>

                <h5>High Scores Hit:</h5>
                <ul>
                    @foreach (var hit in player.Stats.HighScoreHits)
                    {
                        @if (hit.Value > 0)
                        {
                            <li>@hit.Key: @hit.Value times</li>
                        }
                    }
                </ul>
            </div>
        }

        <div class="mt-4">
            <button class="btn btn-success me-2" @onclick="ResetGame">Restart Game</button>
            <button class="btn btn-outline-secondary" @onclick="GoHome">Home</button>
        </div>
    </div>
}
else
{
    <div class="standard-container">
        @if (Players != null && Players.Count > 0)
        {
            <div class="player-summary-bar">
                @foreach (var player in Players)
                {
                    bool isActive = player.Id == Players[CurrentPlayerIndex].Id;
                    <div class="player-summary-card @(isActive ? "active" : string.Empty)">
                        <div class="player-summary-name">@player.Name</div>
                        <div class="player-summary-score">@GetDisplayedScore(player.Id)</div>
                        <div class="player-summary-meta">@((isActive ? GetSuggestedOut() : "Waiting"))</div>
                    </div>
                }
            </div>
        }

        @{
            var activePlayer = Players != null && Players.Count > CurrentPlayerIndex ? Players[CurrentPlayerIndex] : null;
            var activeScore = activePlayer != null && PlayerScores.ContainsKey(activePlayer.Id)
                ? PlayerScores[activePlayer.Id]
                : null;
        }

        @if (activePlayer != null)
        {
            <div class="player-info-section">
                <div class="result-cards">
                    <div class="result-card points-card">
                        <div class="card-label">Average</div>
                        <div class="card-value">@GetAverage()</div>
                    </div>
                    <div class="result-card marks-card">
                        <div class="card-label">Leg Avg</div>
                        <div class="card-value">@GetLegAverage()</div>
                    </div>
                    <div class="result-card points-total-card">
                        <div class="card-label">Darts</div>
                        <div class="card-value">@GetDartsThrown()</div>
                    </div>
                </div>

                <div class="round-statistics">
                    <div class="stat-item">
                        <div class="stat-label">last throw</div>
                        <div class="stat-value">@GetLastThrow()</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">mode</div>
                        <div class="stat-value">@((UseThreeDartMode ? "3 darts" : "regular").ToUpper())</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">sets</div>
                        <div class="stat-value">@activeScore?.PlayerSets</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">legs</div>
                        <div class="stat-value">@activeScore?.PlayerLegs</div>
                    </div>
                </div>
            </div>
        }

        <div class="standard-input-area">
            <MudButtonGroup Color="Color.Primary" Variant="Variant.Filled" Class="centered-button-group">
                <MudButton FullWidth="true" OnClick="SwitchToRegularMode" Disabled="@(UseThreeDartMode == false)">Regular</MudButton>
                <MudButton FullWidth="true" OnClick="SwitchToThreeDartMode" Disabled="@(UseThreeDartMode)">3 Darts</MudButton>
            </MudButtonGroup>

            @if (UseThreeDartMode)
            {
                <div class="standard-input-row three-dart-row">
                    <div class="dart-inputs">
                        <div class="dart-input @(DartIndex == 1 ? "active" : "")">@InputScoreDartOne</div>
                        <div class="dart-input @(DartIndex == 2 ? "active" : "")">@InputScoreDartTwo</div>
                        <div class="dart-input @(DartIndex == 3 ? "active" : "")">@InputScoreDartThree</div>
                    </div>
                    <MudButton Class="primary-submit-button" Variant="Variant.Filled" Color="Color.Primary" OnClick="SubmitScore">Submit</MudButton>
                </div>

                <div class="btn-group mb-3 multiplier-switch" role="group">
                    <button class="btn @(SelectedMultiplier == "S" ? "btn-primary" : "btn-outline-secondary")" @onclick='() => SelectedMultiplier = "S"'>Single</button>
                    <button class="btn @(SelectedMultiplier == "D" ? "btn-primary" : "btn-outline-secondary")" @onclick='() => SelectedMultiplier = "D"'>Double</button>
                    <button class="btn @(SelectedMultiplier == "T" ? "btn-primary" : "btn-outline-secondary")" @onclick='() => SelectedMultiplier = "T"'>Triple</button>
                </div>

                <div class="keyboard-wrapper">
                    @switch (SelectedMultiplier)
                    {
                        case "D":
                            <Keyboard KeyboardParameters="KeyboardParamsEachDartDouble" KeyClick="HandleKeyEachDart" />
                            break;
                        case "T":
                            <Keyboard KeyboardParameters="KeyboardParamsEachDartTriple" KeyClick="HandleKeyEachDart" />
                            break;
                        default:
                            <Keyboard KeyboardParameters="KeyboardParamsEachDartSingle" KeyClick="HandleKeyEachDart" />
                            break;
                    }
                </div>
            }
            else
            {
                <div class="standard-input-row">
                    <MudTextField @bind-Value="InputScore" Variant="Variant.Outlined" Disabled="true" Class="text-field-style" Style="flex:1" />
                    <MudIconButton Icon="@Icons.Material.Filled.Backspace" Color="Color.Error" Class="input-clear-button" OnClick="HandleInsideDeleteKeyRegularkeyboard" />
                </div>

                <div class="keyboard-wrapper">
                    <Keyboard KeyboardParameters="KeyboardParams" KeyClick="HandleKey" />
                </div>
            }
        </div>
    </div>
}

</div>

@if (ShowCheckoutPopup)
{
    <div class="modal-overlay">
        <div class="modal-box">
            <h4 style="color:black">Checkout Information</h4>

            <div class="mb-2">
                <label style="color:black">Number of darts thrown at double:</label>
                <div class="btn-group mt-1" role="group">
                    @foreach (var option in AvailableDoubleDartOptions)
                    {
                        <button type="button"
                                class="btn @(SelectedDartsUsedOnDouble == option ? "btn-primary" : "btn-outline-primary")"
                                @onclick="() => OnSelectDartsUsedOnDouble(option)">
                            @option
                        </button>
                    }
                </div>
            </div>

            @if (AvailableCheckoutDartOptions?.Count > 0)
            {
                <div class="mb-2">
                    <label style="color:black">Number of darts used for checkout:</label>
                    <div class="btn-group mt-1" role="group">
                        @foreach (var option in AvailableCheckoutDartOptions)
                        {
                            <button type="button"
                                    class="btn @(SelectedDartsUsedOnCheckout == option ? "btn-primary" : "btn-outline-primary")"
                                    @onclick="() => OnSelectDartsUsedOnCheckout(option)">
                                @option
                            </button>
                        }
                    </div>
                </div>
            }

            <div class="mt-3">
                <button class="btn btn-success me-2" @onclick="ConfirmCheckoutData">Confirm</button>
                <button class="btn btn-danger" @onclick="CloseCheckoutPopup">Cancel</button>
            </div>
        </div>
    </div>
}
